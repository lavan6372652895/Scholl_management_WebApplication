@model Scholl_management_WebApplicationmodel.Model.CreateuserModel
@{
    ViewBag.Title = "Adduserpage";
}
@{ 
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                    </div>
                    @using (Html.BeginForm(FormMethod.Post))
                    {
                <form class="user">
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            @Html.LabelFor(x => x.FirstName)
                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
                        </div>
                    
                   
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            @Html.LabelFor(x => x.LatName)
                            @Html.TextBoxFor(x => x.LatName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.LatName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12 mb-3 mb-sm-0">
                            @Html.LabelFor(x => x.Mail)
                            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Mail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            @Html.LabelFor(x => x.password)
                            @Html.TextBoxFor(x => x.password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.password, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-sm-6 mb-3 mb-sm-0">
                            @Html.LabelFor(x => x.RePassword)
                            @Html.TextBoxFor(x => x.RePassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.RePassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12 mb-3 mb-sm-0">
                            @Html.LabelFor(x => x.Branch)
                            @Html.TextBoxFor(x => x.Branch, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Branch, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <input type="submit" value="Register Account" , class="btn btn-primary btn-user btn-block" />
                    <hr>
                    <a href="index.html" class="btn btn-google btn-user btn-block">
                        <i class="fab fa-google fa-fw"></i> Register with Google
                    </a>
                    <a href="index.html" class="btn btn-facebook btn-user btn-block">
                        <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
                    </a>
                </form>
                    }
                    <hr>
                    <div class="text-center">
                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                    </div>
                    <div class="text-center">
                        @Html.ActionLink("Already have an account? Login!", "LoginPage", "Default")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
